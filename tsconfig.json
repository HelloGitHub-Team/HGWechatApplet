{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["./typings"],
    "pretty": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "miniprogram_dist", "dist", "tools", "**/*.spec.ts"]
}
