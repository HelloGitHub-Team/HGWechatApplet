.page-home {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.dalily-recommend {
  position: relative;
  height: 1046px;
  margin: 32px;
  -webkit-perspective: 1000px;
  perspective: 1000px;
  -webkit-perspective-origin: 50% 150%;
  perspective-origin: 50% 150%;
}
.dalily-recommend .content {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1000px;
  overflow: hidden;
  background: #fff;
  border-radius: 20px;
  box-shadow: 3px 4px 5px rgba(0, 0, 0, 0.2);
  transform-style: preserve-3d;
  transition-timing-function: 'ease';
  transition-duration: .3s;
}
.dalily-recommend .header {
  width: 686px;
  height: 66vh;
}
.dalily-recommend .header image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.dalily-recommend .header .info {
  position: absolute;
  top: 32px;
  left: 32px;
  color: #fff;
}
.dalily-recommend .header .date {
  font-size: 66px;
}
.dalily-recommend .header .date .month {
  margin-left: 10px;
  font-size: 28px;
}
.dalily-recommend .header .other {
  width: 60%;
  margin: 32px auto;
  font-size: 28px;
}
.dalily-recommend .header .type {
  position: absolute;
  top: 20px;
  right: -56px;
  z-index: 3;
  width: 200px;
  height: 56px;
  color: #fff;
  font-size: 28px;
  line-height: 56px;
  text-align: center;
  background-color: #78c0a8;
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
  transform: rotate(45deg);
}
.dalily-recommend .body {
  font-size: 28px;
  background: #fff;
}
.dalily-recommend .body .title {
  display: block;
  width: 100%;
  height: 80px;
  color: rgba(0, 0, 0, 0.85);
  font-weight: bold;
  font-size: 34px;
  line-height: 80px;
  text-align: right;
}
.dalily-recommend .body .item {
  padding: 20px 30px;
  font-size: 28px;
}
.dalily-recommend .body .item .p-name {
  margin-bottom: 10px;
  font-weight: 500;
  font-size: 30px;
}
.dalily-recommend .body .item .p-desc {
  display: -webkit-box;
  overflow: hidden;
  color: rgba(0, 0, 0, 0.6);
  line-height: 1.5;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
